<%- include('partials/header') %>
<%- include('partials/navbar') %>
<% if (errorMsg){ %>
<%= errorMsg %>
<% } %>
<% if (posiMsg){ %>
<%= posiMsg %>
<% } %>
<div class="row" style="width:100%">

  <div class="col" style="margin: 70px; color:black; text-align:center;">
    <div class="card">
      <div class="card-header">
        Features
      </div>
      <div class="card-body">
        <ul>
          <li> Create or join a workspace dedicated to your company. </li>
          <li> Post announcements for your employees to see. </li>
          <li> Create a todo list with events for members of your company or for you alone. </li>
          <li> Assign roles to your employees, or turn them into admins.</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col" style="text-align:center; color: black">
    <div class="card">
      <div class="card-header">
        <h1> Registration </h1>
      </div>


      <div class="card-body">
        <form action="/register" method="POST">
          <label for="email">Email</label><br>
          <input type="email" name="email" required><br>
          <label for="firstName">First Name</label><br>
          <input type="text" name="firstName" required><br>
          <label for="lname">Last Name</label><br>
          <input type="text" name="lname" required><br>
          <label for="password">Password <br> (Must be 8 characters or more and consist of numbers, letters, or symbols)</label><br>
          <input type="password" name="password" pattern="[a-zA-z0-9-!$%^&*()_+|~=`{}\[\]:;<>?,.\/]{8,}" required><br>
          <label for="password">Confirm Password</label><br>
          <input type="password" name="cPassword" pattern="[a-zA-z0-9-!$%^&*()_+|~=`{}\[\]:;<>?,.\/]{8,}" required><br><br>
          <button type="submit" class="btn btn-light">Register</button>
        </form>
      </div>

      <div class="card-footer">
        <a href="/login"> Already a Member? Log in! </a><br>
      </div>
    </div>
  </div>
</div>


<%- include('partials/footer') %>
